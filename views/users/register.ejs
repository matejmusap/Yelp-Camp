<% include ../partials/header %>
<form id="register" action="/register" method="POST" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1 class="text-center">Sign Up</h1>
        </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-2 col-xs-8 col-xs-offset-2">
            <div class="form-group">
                <label for="firstName">First Name</label>
                <input pattern=".{3,15}" id="firstName" class="form-control" type="text" name="firstName" placeholder="First Name*" required title="Must be between 3 and 15 Characters">
            </div>
        </div>
        <div class="col-md-4 col-md-offset-0 col-xs-8 col-xs-offset-2">
            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input pattern=".{3,15}" id="lastName" class="form-control" type="text" name="lastName" placeholder="Last Name*" required title="Must be between 3 and 15 Characters">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-2 col-xs-8 col-xs-offset-2">
            <div class="form-group">
                <label for="email">Email</label>
                <input id="email" class="form-control" type="email" name="email" placeholder="Email*" required>
            </div>
        </div>
        <div class="col-md-4 col-md-offset-0 col-xs-8 col-xs-offset-2">
            <div class="form-group">
                <label for="adminCode">Admin Code</label>
                <input id="adminCode" class="form-control" type="text" name="adminCode" placeholder="Admin Code">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-2 col-xs-8 col-xs-offset-2">
            <div class="form-group">
                <label for="username">Username</label>
                <input pattern=".{3,10}" id="username" class="form-control" type="text" name="username" placeholder="Username*" required title="Must be between 3 and 10 Characters">
            </div>
        </div>
        <div class="col-md-4 col-md-offset-0 col-xs-8 col-xs-offset-2">
            <div class="form-group">
                <label for="password">Password</label>
                <input pattern=".{8,20}" id="password" class="form-control" type="password" name="password" placeholder="Password*" required title="Password must be between 8 and 20 characters.">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-2 col-xs-8 col-xs-offset-2">
            <div class="form-group">
                <label for="avatar">Avatar</label>
                <input type="file" id="avatar" name="avatar" accept="image/*" required>
            </div>
        </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
            <div class="form-group">
                <label for="bio">Bio</label>
                <textarea id="bio" class="form-control" type="bio" name="bio" rows="4" placeholder="Write a short description of yourself and what you enjoy about camping."></textarea>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="form-group">
                <div class="g-recaptcha" data-sitekey="6LePgU0UAAAAAH4ZunnBi4UJnlCzGHtC9hYBdSFd"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up!</button>
            </div>
            <a href="/campgrounds">Go Back</a>
         </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-xs-8 col-xs-offset-2">
            <div class="form-group">
                <p class="text-center"><strong>*</strong> indicates a required field.</p>
            </div>
        </div>
    </div>
</form>
<% include ../partials/footer %>